<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>HTML5 Multimedia Player</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      text-align: center;
      padding: 20px;
    }
    h1 {
      color: #333;
    }
    a {
      text-decoration: none;
      color: #007bff;
      margin: 0 10px;
    }
    a:hover {
      text-decoration: underline;
    }
    section {
      margin: 30px auto;
      width: 80%;
      background: white;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    video, audio {
      width: 90%;
      border-radius: 10px;
      outline: none;
    }
    .gallery img {
      width: 30%;
      margin: 10px;
      border-radius: 10px;
      transition: 0.3s;
    }
    .gallery img:hover {
      transform: scale(1.05);
    }
    table {
      margin: 20px auto;
      border-collapse: collapse;
      width: 60%;
    }
    table, th, td {
      border: 1px solid #333;
    }
    th, td {
      padding: 10px;
    }
    footer {
      margin-top: 20px;
      color: #555;
      font-size: 14px;
    }
  </style>
</head>
<body>

  <h1>Welcome to the HTML5 Multimedia Player</h1>

  <nav>
    <a href="#audio">Audio Player</a> |
    <a href="#video">Video Player</a> |
    <a href="#images">Image Gallery</a>
  </nav>

  <section id="audio">
    <h2>Audio Player</h2>
    <audio controls>
      <source src="C:\Html.py\multimedia_player" type="audio/mpeg">
      Your browser does support the audio element.
    </audio>
  </section>

  <section id="video">
    <h2>Video Player</h2>
    <video controls>
      <source src="C:\Html.py\multimedia_player" type="video/mp4">
      Your browser does support the video tag.
    </video>
  </section>

  <section id="images">
    <h2>Image Gallery</h2>
    <div class="gallery">
      <img src="C:\Html.py\multimedia_player" alt="Image 1">
      <img src="C:\Html.py\multimedia_player" alt="Image 2">
      <img src="C:\Html.py\multimedia_player" alt="Image 3">
    </div>
  </section>

  <section>
    <h2>Multimedia Content Table</h2>
    <table>
      <tr>
        <th>Type</th>
        <th>File Name</th>
        <th>Format</th>
      </tr>
      <tr>
        <td>Audio</td>
        <td>audio.mp3</td>
        <td>MP3</td>
      </tr>
      <tr>
        <td>Video</td>
        <td>video.mp4</td>
        <td>MP4</td>
      </tr>
      <tr>
        <td>Images</td>
        <td>image1.jpeg, image2.jpeg, image3.jpeg</td>
        <td>JPEG</td>
      </tr>
    </table>
  </section>

